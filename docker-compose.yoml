version: '3.8'

services:
  postgres:
    image: postgres:13
    container_name: postgres-container
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: admin
      POSTGRES_DB: House_Config
    ports:
      - "5432:5432"
    networks:
      - app-network

  nginx:
    image: nginx:latest
    container_name: nginx-proxy
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - house_config_service
      - notification_service
      - frontend
    networks:
      - app-network

  redis:
    image: redis:alpine
    container_name: redis-container
    ports:
      - "6379:6379"
    networks:
      - app-network
    command: ["redis-server", "--appendonly", "no"]

  house_config_service:
    build:
      context: ./House_Config-service
    container_name: house-config-service
    environment:
      - SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/House_Config
      - SPRING_DATASOURCE_USERNAME=postgres
      - SPRING_DATASOURCE_PASSWORD=admin
      - SPRING_RABBITMQ_HOST=rabbitmq
      - SPRING_RABBITMQ_PORT=5672
      - SPRING_REDIS_HOST=redis
      - SPRING_REDIS_PORT=6379
    depends_on:
      - postgres
      - redis
      - rabbitmq
    ports:
      - "8085:8085"
    networks:
      - app-network

  notification_service:
    build:
      context: ./Notification-service
    container_name: notification-service
    environment:
      - SPRING_DATA_REDIS_HOST=redis
      - SPRING_DATA_REDIS_PORT=6379
      - SPRING_APPLICATION_NAME=notification-service
    depends_on:
      - redis
    ports:
      - "8083:8083"
    networks:
      - app-network

  rabbitmq:
    image: rabbitmq:3-management
    container_name: rabbitmq
    ports:
      - "5672:5672"  # Port AMQP
      - "15672:15672"  # Interface de gestion
    environment:
      RABBITMQ_DEFAULT_USER: ing3
      RABBITMQ_DEFAULT_PASS: paas
    networks:  # Ajout au r√©seau Docker
      - app-network

  frontend:
    build:
      context: ./House_front
    container_name: frontend-container
    ports:
      - "3000:3000"
    depends_on:
      - house_config_service
      - notification_service
    networks:
      - app-network
    stdin_open: true
    tty: true

networks:
  app-network:
    driver: bridge
